<!DOCTYPE html>

<html lang="en">
@{

    var session = (Website_Panda.Models.Login.UserLogin)Session[Website_Panda.Models.Login.Common.USER_SESSION];
}

<head runat="server">
    <meta name="robots" content="noindex,nofollow" />
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="30x30" href="~/Content/Assets/Img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Panda Optical</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    <!-- CSS Files -->
    <link href="~/Content/Assets/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/Admin/css/light-bootstrap-dashboard.css" rel="stylesheet" />

    <link href="~/Content/Assets/Home/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Content/Assets/Admin/scripts/JavaScript_Img.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="../../Img/3.jpg">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/Home/Index" class="simple-text">
                        PANDA Optical
                    </a>
                </div>
                <ul class="nav">

                    <li class="nav-item ">
                        <a class="nav-link" href="~/Banner/Index">
                            <i class="fa fa-image"></i>
                            <p>Banner</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="~/Contact/Index">
                            <i class="fa fa-map-marker"></i>
                            <p>Contact</p>
                        </a>
                    </li>

                    <li>
                        <a class="nav-link" href="~/Category/Index">
                            <i class="fa fa-tags"></i>
                            <p>Category</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="~/Brand/Index">
                            <i class="fa fa-tags"></i>
                            <p>Brand</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="~/Blog/Index">
                            <i class="fa fa-book"></i>
                            <p>Blog</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="~/Product/Index">
                            <i class="fa fa-list"></i>
                            <p>Product</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="~/OrderManagement/AllOrder">
                            <i class="fa fa-list-alt"></i>
                            <p>Order</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/Administrator/IndexMessage">
                            <i class="fa fa-comments"></i>
                            <p>Message</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="~/Administrator/IndexCustomerAccount">
                            <i class="fa fa-users"></i>
                            <p>Customer</p>
                        </a>
                    </li>

                    @*<li>
            <a class="nav-link" href="~/Administrator/Index">
                <i class="fa fa-user"></i>
                <p>Adminitrator</p>
            </a>
        </li>*@

                    <li>
                        <a class="nav-link" href="~/Statistical/BestSeller">
                            <i class="fa fa-bar-chart"></i>
                            <p>Bestselling items</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="~/Statistical/Income">
                            <i class="fa fa-bar-chart"></i>
                            <p>Income</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " style="border: 1px solid #dfc4d0; border-radius:0" color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#" style="color: #ff1e1e9e;"> Management </a>
                  
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        
                        <ul class="nnav navbar-nav navbar-right">
                          @if(session==null)
                            {}
                           else{
                            <li class="nav-item dropdown" >
                                <a style="color: #ffffff;" class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="no-icon"> Account: @session.UserName</span>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" style="left: 0px;">
                                    <a href="@Url.Action("Logout","LoginAdmin")" class="dropdown-item">Logout</a>
                                   
                                 </div>
                            </li>}
                            
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <footer class="footer">
                    <div class="container-fluid">                           
                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="/Home/Index">Panda Optical</a> with love.
                        </p>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $('table').dataTable();
        });
    </script>

</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
