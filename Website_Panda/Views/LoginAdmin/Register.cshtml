
@model Website_Panda.Models.Administrator

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head  runat="server">
    <meta name="robots" content="noindex,nofollow" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/png" sizes="30x30" href="~/Content/Assets/Img/favicon.ico">
    <title>Register</title>
    <link href="~/Content/Assets/Home/css/login_overlay.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/Assets/Home/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/Assets/Home/css/style.css" rel='stylesheet' type='text/css' />
    <link href="https://fonts.googleapis.com/css?family=Inconsolata:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">

    @*icon*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
</head>
<body>
    @using (Html.BeginForm("Register", "LoginAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="overlay-login text-left " style="display: block;">
            @*<button type="button" class="overlay-close1">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>*@
            <div class="wrap">
                <h5 class="text-center mb-4">Register</h5>
                <div class="login p-5 bg-dark mx-auto mw-100">
                    <form action="#" method="post">                        
                        <div class="form-group">
                            <label class="mb-2">Username</label>
                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Enter Username", style = "border-bottom: solid 1px;", @class = "form-control", id = "exampleInputEmail1" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="form-group">
                            <label class="mb-2">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email", style = "border-bottom: solid 1px;", @class = "form-control", id = "exampleInputEmail1" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                        <div class="form-group">
                            <label class="mb-2">Password</label>

                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password", style = "border-bottom: solid 1px;", @class = "form-control", id = "exampleInputEmail1" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="form-group">
                            <label class="mb-2">ConfirmPassword</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword", style = "border-bottom: solid 1px;", @class = "form-control", id = "exampleInputEmail1" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
             
                     

                        <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                        <a class="btn btn-dark submit mb-4" href="@Url.Action("Index","LoginAdmin")">Have an account.</a>
                    </form>
                </div>
                <!---->
            </div>
        </div>
    }
</body>
</html>
