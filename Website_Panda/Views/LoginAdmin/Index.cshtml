
@model Website_Panda.Models.Administrator
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head runat="server">
    <meta name="robots" content="noindex,nofollow" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/png" sizes="30x30" href="~/Content/Assets/Img/favicon.ico">
    <title>Login</title>
    <link href="~/Content/Assets/Home/css/login_overlay.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/Assets/Home/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/Assets/Home/css/style.css" rel='stylesheet' type='text/css' />
    <link href="https://fonts.googleapis.com/css?family=Inconsolata:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">

    @*icon*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
</head>
<body>
    @using (Html.BeginForm("Login", "LoginAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="overlay-login text-left " style="display: block;">
            @*<button type="button" class="overlay-close1">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>*@
            <div class="wrap_login">
                <h5 class="text-center mb-4" style="    color: white;    font-size: 2em;">Login Now</h5>
                <a href="@Url.Action("Index", "Home")" style="color:orangered">Back to Home</a>
                <div class="login p-5 bg-dark mx-auto mw-100">
                    <form action="#" method="post">
                        <div class="form-group">
                            <label class="mb-2">Email address</label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "exampleInputEmail1", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.UserName)
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>

                        <div class="form-group">
                            <label class="mb-2">Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "exampleInputPassword1" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <p style="color:red">@Html.Raw(ViewBag.MessageError)</p>
                        <button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
                        <a class="btn btn-dark submit mb-4" href="@Url.Action("Register","LoginAdmin")">Register</a>
                    </form>
                </div>
                <!---->
            </div>
        </div>
    }
</body>
</html>
