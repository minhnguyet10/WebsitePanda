@model Website_Panda.Models.QueryModel.WishList

@{
    ViewBag.Title = "ShowToWishList";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<head>
    <style>
        input {
            border-radius: 3px;
            margin-top: 2px;
        }

        button {
            margin-top: 2px;
        }
        .btnUpdate {
            background-color: white;
            color: orangered;
            border-color: orangered;
            border-radius: 3px
        }
    </style>
</head>

<div class="banner_inner">

    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="~/Home/Index">Home</a>
                    <i>|</i>
                </li>
                <li>Wish list</li>
            </ul>
        </div>
    </div>
</div>
<br />
<h2 style="text-align:center">Wish list</h2>
@if (Model != null)
{<div class="cart-main-area section-padding--lg bg--white">
        <div class="container-fluid">
            <div class="table-content wnro__table table-responsive" style="padding: 35px 20px 5px 20px;">
                <table id="table-cate" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="font-weight:bold;">ProductID</th>
                            <th style="font-weight:bold;">Product Name</th>
                            <th style="font-weight:bold;">Image</th>
                            <th style="font-weight:bold;">Price</th>
                            <th style="font-weight:bold;">PromotionPrice</th>
                            <th style="font-weight:bold;">Add to Cart</th>
                            <th style="font-weight:bold;">Remove</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(model => item._shopping_product.IDProduct)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item._shopping_product.ProductName)
                                </td>
                                <td>
                                    <img src="~/Images/@item._shopping_product.Image" style="width: 80px ;height: 100px; object-fit: cover" />
                                </td>
                                <td>@Html.DisplayFor(model => item._shopping_product.Price)</td>
                                <td>@Html.DisplayFor(model => item._shopping_product.PromotionPrice)</td>
                                <td class="product-add-to-cart"><a style="color:orangered" href="/WishList/AddtoCart/@item._shopping_product.IDProduct"> Add to Cart</a></td>
                                <td class="product-remove"><a style="color:orangered" href="/WishList/RemoveWishList/@item._shopping_product.IDProduct">X</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
            <div class="cartbox__btn" style="margin: 35px 20px 20px 20px;">
                <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
                    <li style="list-style:none"><a href="/Home/Index" style="color:orangered;font-weight:900">Back to List</a></li>
                    <li style="list-style:none">
                        <div class="checkout-right-basket">
                            <a href="/ShoppingCart/ShowToCart">Go to Cart</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}
<br />
<h5 class="text-center">@Html.Raw(ViewBag.Empty)</h5>
