@model Website_Panda.Models.CustomerWithoutAcc
@{
    ViewBag.Title = "Details";
    Layout = null;
}


<section class="wn_contact_area bg--white pt--80">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-form-wrap">
                    <h2 class="contact__title">Order Information</h2>
                    @using (Html.BeginForm("PurchaseSuccess", "ShoppingCart"))
                    {
                <form id="contact-form" action="mail.php" method="post">
                    <div class="single-contact-form space-between">
                        <label class="control-label col-md-2">FirstName </label>
                        <input class="form-control" name="FirstName" />
                    </div>
                    <div class="single-contact-form space-between">
                        <label class="control-label col-md-2">LastName </label>
                        <input class="form-control" name="LastName" />
                    </div>
                    <div class="single-contact-form space-between">
                        <label class="control-label col-md-2">Email </label>
                        <input class="form-control" name="Email" />
                    </div>
                    <div class="single-contact-form space-between">
                        <label class="control-label col-md-2">Phone </label>
                        <input class="form-control" name="Phone" />
                    </div>
                    <div class="single-contact-form space-between">
                        <label class="control-label col-md-2">Address </label>
                        <input class="form-control" name="Address" />
                    </div>
                    <div>
                        <label>Phương thức thanh toán</label>

                        <div class="col-md-10">
                            @Html.DropDownList("IDMethod", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-3"></div>
                    <input type="submit" value="Submit" class=" btn btn-primary" />
                </form>
                    }
                </div>

            </div>
        </div>
    </div>


</section>
