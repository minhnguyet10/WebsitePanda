@model Website_Panda.Models.Customer
@{
    Layout = null;
}
@{
    ViewBag.Title = "LoginToPurchase";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>LoginToPurchase</h2>
<div class="checkout_login">
    @using (Html.BeginForm("PurchaseAccount", "ShoppingCart", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="overlay-login text-left " style="display: block;">
        @*<button type="button" class="overlay-close1">
                <i class="fa fa-times" aria-hidden="true"></i>
            </button>*@
        <div class="wrap_login">
            <h5 class="text-center mb-4">Login Now</h5>
            <div class="login p-5 bg-dark mx-auto mw-100">
                <form action="#" method="post">
                    <div class="form-group">
                        <label class="mb-2">Email address</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", id = "exampleInputEmail1", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.UserName)
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>

                    <div class="form-group">
                        <label class="mb-2">Password</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "exampleInputPassword1" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
                    <a class="btn btn-dark submit mb-4" href="@Url.Action("Register","Login")">Register</a>
                </form>
            </div>
            <!---->
        </div>
    </div>

}
</div>

