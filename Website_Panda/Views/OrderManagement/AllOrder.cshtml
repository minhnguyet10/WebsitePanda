@model IEnumerable<Website_Panda.Models._Order>

@{
    ViewBag.Title = "AllOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="text-align:center">Quản lý đơn hàng</h2>
<br />
<div class='wrapper text-center'>
    <div class="btn-group">
        <a class="btn btn-default active" href="@Url.Action("AllOrder","OrderManagement")" role="button">Tất cả đơn hàng</a>
        <a class="btn btn-default" href="@Url.Action("WaitingApproval","OrderManagement")" role="button">Chờ xác nhận</a>
        <a class="btn btn-default" href="@Url.Action("Approved_Unpaid", "OrderManagement")" role="button">Đã xác nhận & Chưa thanh toán</a>
        <a class="btn btn-default" href="@Url.Action("Approved_paid", "OrderManagement")" role="button">Đã xác nhận & Đã thanh toán</a>
        <a class="btn btn-default " href="@Url.Action("Success", "OrderManagement")" role="button">Đã giao</a>
        <a class="btn btn-default " href="@Url.Action("Cancelled", "OrderManagement")" role="button">Đã hủy</a>
    </div>
    <br />
    <br />
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <div class="row form-group">
               
            </div>
            <div class="table-responsive">
                <table id="myTable" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th> ID Order</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email_Cus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address_cus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone_Cus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Paid)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cancelled)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Delivered)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ComfirmDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeliveryDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.IDOrder)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email_Cus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address_cus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone_Cus)
                    </td>
                    <td>
                        @if (item.Status == true)
                        {
                            <span>Đã duyệt</span>
                        }
                        else
                        {
                            <span>Chưa duyệt</span>
                        }
                    </td>
                    <td>
                        @if (item.Paid == true)
                        {
                            <span>Đã thanh toán</span>
                        }
                        else
                        {
                            <span>Chưa thanh toán</span>
                        }
                    </td>
                    <td>
                        @if (item.Cancelled == true)
                        {
                            <span>Đã hủy</span>
                        }
                        else
                        {
                            <span>Chưa duyệt</span>
                        }
                    </td>
                    <td>
                        @if (item.Delivered == true)
                        {
                            <span>Đã giao</span>
                        }
                        else
                        {
                            <span>Chưa giao</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComfirmDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "ManagementOrderDetail", new { id = item.IDOrder }, new { @class = "btn btn-default" })
                    </td>
                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

        
        
        @section scripts {
            <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
            <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('#myTable').DataTable({
                        responsive: true,
                        retrieve: true,
                        "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]]
                    });

                });</script>
        }
