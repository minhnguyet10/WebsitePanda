@model Website_Panda.Models.Customer

@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="banner_inner">

    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="~/Home/Index">Home</a>
                    <i>|</i>
                </li>
                <li>Create Account</li>
            </ul>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        @using (Html.BeginForm("CreateAccount", "CustomerAccount", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <br />
            <h2 class="text-center" style="font-weight:600">Register</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="login bg-dark mx-auto mw-100" style="    padding: 5rem;">
            <div class="form-group">
                <label><span class="control-label col-md-2">Username</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-2">Password</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-4">Comfirm Password</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-2">Firstname</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label> <span class="control-label col-md-2">Lastname</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-2">Email</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.Email_Cus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email_Cus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-2">Address</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.Address_Cus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address_Cus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><span class="control-label col-md-2">Number phone</span></label>

                <div class="col-md-12">
                    @Html.EditorFor(model => model.Phone_Cus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone_Cus, "", new { @class = "text-danger" })
                </div>
            </div>
            <p style="color:red">@Html.Raw(ViewBag.CheckUser)</p>
            
            <button type="submit" class="btn btn-primary submit">Register</button>
            <a class="btn btn-dark submit" href="@Url.Action("LoginCus","CustomerAccount")">Have an account</a>
        </div>
            </div>
            }


        </div>
    <div class="col-lg-3"></div>
</div>


