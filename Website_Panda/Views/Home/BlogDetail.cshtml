@model Website_Panda.Models.Blog

@{
    ViewBag.Title = "BlogDetail";
    ViewBag.Title = Model.Title;
    ViewBag.Keywords = Model.Title;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="banner_inner">

    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <li>
                    <a href="~/Home/Index">Home</a>
                    <i>|</i>
                </li>
                <li>Blog</li>
            </ul>
        </div>
    </div>
</div>
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="tittle-w3layouts text-center my-lg-4 my-4">Blog</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<br />
<!-- Start Shop Page -->
@using (Html.BeginForm("Index", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                    @{ Html.RenderAction("MoreBlog", "Home");}
                </div>
                <div class="col-lg-9 col-12 order-1 order-lg-2">
                    <h2 class="text-center" style="color:orangered; font-weight:bold;">@Html.DisplayFor(model => model.Title)</h2>
                    <h4 class="text-md-left">@Html.DisplayFor(model => model.Subtitle)</h4>
                    <a style="color:#c2c2c2;;">@Html.DisplayFor(model => model.CreatedDate)</a>
                    <div class="row" style="margin:2em auto 2em auto;">
                        <img src="~/Images/@Model.Image" class="img-fluid" alt=@Model.Image>
                    </div>
                    <span>@Html.DisplayFor(model => model.Content)</span>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <a class="nav-link" href="~/Home/BlogList" style="color:orangered;">
                        <i class="fa fa-angle-double-left fa-3x"></i>
                    </a>
                </div>
                <div class="col-10"></div>
            </div>
        </div>
    </div>
}