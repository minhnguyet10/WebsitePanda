@model IEnumerable<Website_Panda.Models.Product>

@{
    Layout = null;
}

<section class="wn__product__area brown--color">
    <div class="container">
        <!-- Start Single Tab Content -->
        <div class="furniture--4 border--round arrows_style owl-carousel owl-theme row mt--50">
            <!-- Start Single Product -->
            @foreach (var item in Model)
            {

                <div class="product product__style--3">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        @if (item.Quantity <= 0 || item.Quantity == null)
                        {
                            <div class="product__thumb">
                                <a class="first__img" href="/Home/ProductDetail/@item.IDProduct"><img style="opacity:0.3;" src="~/Images/@item.Image" alt="product image"></a>

                                @*<div class="hot__box">
                                        <span class="hot-label">BEST SALLER</span>
                                    </div>*@
                            </div>
                            <div class="product__content content--center">
                                <h4><a href="single-product.html">@Html.DisplayFor(model => item.ProductName)</a></h4>
                                <ul class="prize d-flex">
                                    <li>
                                        @Html.DisplayFor(model => item.Price)$
                                    </li>
                                    <li>
                                        Tồn: @Html.DisplayFor(model => item.Quantity)
                                    </li>
                                </ul>
                                <div class="action">
                                    <div class="actions_inner">

                                        <ul class="add_to_links" style="margin-top: -25px;">
                                            <li>
                                                <span class="label label-info">Sản phẩm hiện hết hàng</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="product__thumb">
                                <a class="first__img" href="/Home/ProductDetail/@item.IDProduct"><img src="~/Images/@item.Image" alt="product image"></a>

                                @*<div class="hot__box">
                                        <span class="hot-label">BEST SALLER</span>
                                    </div>*@
                            </div>
                            <div class="product__content content--center">
                                <h4><a href="single-product.html">@Html.DisplayFor(model => item.ProductName)</a></h4>
                                <ul class="prize d-flex">
                                    <li>
                                        @Html.DisplayFor(model => item.Price)$
                                    </li>
                                    <li>
                                        Tồn: @Html.DisplayFor(model => item.Quantity)
                                    </li>
                                </ul>
                                <div class="action">
                                    <div class="actions_inner">

                                        <ul class="add_to_links" style="margin-top: -25px;">

                                            <li><a class="wishlist" href="/ShoppingCart/AddtoCart/@item.IDProduct"><i class="bi bi-shopping-cart-full"></i></a></li>
                                            <li><a class="compare" href="/WL/AddtoWhishList/@item.IDProduct"><i class="bi bi-heart-beat"></i></a></li>
                                            <li><a data-toggle="modal" title="Quick View" class="quickview modal-view detail-link" href="/Home/ProductDetail/@item.IDProduct"><i class="bi bi-search"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        <!-- End Single Tab Content -->
    </div>
</section>
