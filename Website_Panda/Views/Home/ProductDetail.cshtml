@model Website_Panda.Models.Product

@{
    ViewBag.Title = Model.ProductName;
    ViewBag.Keywords = Model.Title;
    ViewBag.Descriptions = Model.Description;
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
    <div class="banner_inner">

        <div class="services-breadcrumb">
            <div class="inner_breadcrumb">

                <ul class="short">
                    <li>
                        <a href="~/Home/Index">Home</a>
                        <i>|</i>
                    </li>
                    <li>Product detail</li>
                </ul>
            </div>
        </div>

    </div>
@using (Html.BeginForm("Index", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="banner-bottom-wthreelayouts py-lg-5 py-3">
        <div class="container">
            <div class="inner-sec-shop pt-lg-4 pt-3">
                <div class="row">
                    <div class="col-lg-4 single-right-left " style="height: 100%;">
                        <div class="grid images_3_of_2">
                            <div class="flexslider1">
                                <ul class="slides">
                                    <li data-thumb="../../Images/@Model.Image">
                                        <div class="thumb-image"> <img src="~/Images/@Model.Image" data-imagezoom="true" class="img-fluid" alt="@Model.Image"> </div>
                                    </li>
                                    @if (Model.MoreImage1 == null)
                                    {
                                        <li data-thumb="../../Images/@Model.Image">
                                            <div class="thumb-image"> <img src="~/Images/@Model.Image" data-imagezoom="true" class="img-fluid" alt="@Model.Image"> </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li data-thumb="../../Images/@Model.MoreImage1">
                                            <div class="thumb-image"> <img src="~/Images/@Model.MoreImage1" data-imagezoom="true" class="img-fluid" alt="@Model.Image"> </div>
                                        </li>
                                    }
                                    @if (Model.MoreImage2 == null)
                                    {
                                        <li data-thumb="../../Images/@Model.Image">
                                            <div class="thumb-image"> <img src="~/Images/@Model.Image" data-imagezoom="true" class="img-fluid" alt="@Model.Image"> </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li data-thumb="../../Images/@Model.MoreImage2">
                                            <div class="thumb-image"> <img src="~/Images/@Model.MoreImage2" data-imagezoom="true" class="img-fluid" alt="@Model.Image"> </div>
                                        </li>
                                    }
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                        <h3 style="color:black; font-weight:600">@Html.DisplayFor(model => model.ProductName)</h3>
                        <h4>@Html.DisplayFor(model => model.Title)</h4>
                        @if (Model.PromotionPrice <= 0 || Model.PromotionPrice == null)
                        {
                            <p>
                                <span class="item_price">@Html.DisplayFor(model => model.Price)$</span>
                            </p>
                        }
                        else
                        {
                            <p>
                                <span class="item_price">@Html.DisplayFor(model => model.PromotionPrice)$</span>
                                <span class="item_price" style="text-decoration: line-through; opacity: 40%">@Html.DisplayFor(model => model.Price)$</span>                                
                            </p>
                        }
                        <div class="rating1">
                            <ul class="stars">
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>

                        <div class="occasional">
                            <h5>
                                Color :
                                <span>@Html.DisplayFor(model => model.Color)</span>
                            </h5>
                        </div>
                        <div class="occasional">
                            <h5>
                                Quantity of goods in stock :
                                <span>@Html.DisplayFor(model => model.Quantity)</span>
                            </h5>
                        </div>
                        @if (Model.Quantity <= 0 || Model.Quantity == null)
                        {
                            <span style="font-size:x-large; text-decoration:underline;">Sorry, this product is out of stock now!</span>
                        }
                        else
                        {
                    <div class="googles single-item hvr-outline-out">
                        <a href="/ShoppingCart/AddtoCart/@Model.IDProduct" role="button" class="Addtocart">
                            Add to cart
                        </a>
                        <a href="/WishList/AddToWishList/@Model.IDProduct" role="button" class="Addtowishlist" >
                            Like
                        </a>
                    </div>

                        }

                    </div>
                    <div class="clearfix"> </div>
                    <!--/tabs-->
                    <div class="responsive_tabs">
                        <div id="horizontalTab">
                            <ul class="resp-tabs-list">
                                <li>Description</li>
                                <li>Information</li>
                                <li>Reviews</li>
                                
                            </ul>
                            <div class="resp-tabs-container">
                                <!--/tab_one-->
                                <div class="tab1">

                                    <div class="single_page">
                                        <h6>@Html.DisplayFor(model => model.ProductName)</h6>
                                        <p>
                                        </p>
                                        <p class="para">
                                            @Html.DisplayFor(model => model.Description)
                                            
                                        </p>
                                    </div>
                                </div>
                                <!--//tab_one-->
                                <div class="tab2">
                                    <div class="single_page">
                                        <h6>@Html.DisplayFor(model => model.Title)</h6>
                                        
                                        <p class="para">
                                            @Html.DisplayFor(model => model.Information)

                                        </p>
                                    </div>
                                    
                                </div>
                                <div class="tab3">
                                    <div class="single_page">
                                        <div class="bootstrap-tab-text-grids">
                                            <div class="bootstrap-tab-text-grid">
                                            </div>
                                            <div class="add-review">
                                                <p>
                                                    Thêm một bình luận hoặc thắc mắc về sản phẩm ở đây, nếu có vấn đề gì không hài lòng khách yêu có thể gửi mail
                                                    riêng về cho Panda nhé, Panda sẽ rút kinh nghiệm ạ.
                                                </p>
                                                <h4>add a review</h4>
                                                @*<iframe frameborder="0" allowtransparency="true" allowfullscreen="true" scrolling="yes" allow="encrypted-media" src="https://www.facebook.com/v9.0/plugins/comments.php?app_id=&amp;channel=https%3A%2F%2Fstaticxx.facebook.com%2Fx%2Fconnect%2Fxd_arbiter%2F%3Fversion%3D46%23cb%3Df2ea1bae4ad772c%26domain%3Dlocalhost%26origin%3Dhttps%253A%252F%252Flocalhost%253A44354%252Ff36dc6939034f08%26relation%3Dparent.parent&amp;href=https%3A%2F%2Fwww.facebook.com%2Fngyt.mnh%2F&amp;locale=vi_VN&amp;numposts=10&amp;sdk=joey&amp;version=v9.0&amp" class="" style="border: none;visibility: visible;width: 100%;height: 500px;"></iframe>*@
                                                <div class="fb-comments" data-href="https://www.facebook.com/ngyt.mnh/" data-numposts="5" data-width="100%" ></div>
                                            </div>
                                        </div>

                                    </div>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--//tabs-->

                </div>
            </div>
        </div>
        <div class="container-fluid">
            <!--/slide-->
            <div class="slider-img mid-sec mt-lg-5 mt-2 px-lg-5 px-3">
                <!--//banner-sec-->
                <h3 class="tittle-w3layouts text-left my-lg-4 my-3">Featured Products</h3>
                <div class="mid-slider">
                    <div class="owl-carousel owl-theme row">
                        @{ Html.RenderAction("MoreProduct", "Home", new { id = Model.CategoryID });}

                    </div>
                </div>
            </div>
            <!--//slider-->
        </div>
    </section>

}