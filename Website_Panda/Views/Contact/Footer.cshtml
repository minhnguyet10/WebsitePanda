                    <h3>About Us</h3>
                </div>
                <div class="footer-text">
                    <p>
                        @Html.DisplayFor(model => model.Description)
                    </p>
                    <ul class="footer-social text-left mt-lg-4 mt-3">

                        <li class="mx-2">
                            <a href="#">
                                <span class="fa fa-facebook-f"></span>
                            </a>
                        </li>
                        <li class="mx-2">
