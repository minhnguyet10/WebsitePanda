@model IEnumerable<Website_Panda.Models.Contact>

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2 style="text-align:center">
        CONTACT
    </h2>
<div class="row form-group">
    @using (Html.BeginForm("Create", "Contact", FormMethod.Get))
    {
        <div class="col-lg-12">
            <a class="btn btn-warning" href="/Contact/Create" style="margin-left:50px; margin-top:20px;">Create New</a>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShopAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShopPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShopEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShopName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShopAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShopPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShopEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDContact }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDContact }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDContact })
            </td>
        </tr>
    }

</table>
