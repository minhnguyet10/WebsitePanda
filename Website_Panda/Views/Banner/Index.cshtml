@model IEnumerable<Website_Panda.Models.Banner>

@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 style="text-align:center">
                    BANNER
                </h2>
            </div>
            <div class="row form-group">
                @using (Html.BeginForm("Index", "Banner", FormMethod.Get))
                {
                    <div class="col-lg-12">
                        <a class="btn btn-warning" href="/Banner/Create" style="margin-left:50px; margin-top:20px;">Create New</a>
                    </div>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        <img src='~/Images/@item.Image' style="width:250px; height:150px" alt="Không thể hiển thị ảnh" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDBanner }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IDBanner }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDBanner })
                    </td>
                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

    